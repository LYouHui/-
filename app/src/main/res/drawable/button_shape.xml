<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    android:shape="rectangle">
    <!-- 定义按钮的背景颜色 -->
    <solid android:color="#00CCFF" />
    <!-- 设置按钮的每个角的弧形度数 -->
    <corners android:radius="100dip" />
    <!--按钮文字与边界的距离 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>