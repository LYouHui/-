<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.schoolpet.FriendAdd">

    <EditText
        android:id="@+id/addFriend_editText_inputFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/addFriend_button_fingNewFriend"
        android:ems="10"
        android:hint="请输入所查找用户的真实姓名"
        android:inputType="text" />

    <Button
        android:id="@+id/addFriend_button_fingNewFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="查找"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/addFriend_editText_inputFriendName"
        android:layout_alignTop="@+id/addFriend_editText_inputFriendName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addFriend_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addFriend_editText_inputFriendName"
        android:layout_marginTop="19dp" />

</RelativeLayout>
