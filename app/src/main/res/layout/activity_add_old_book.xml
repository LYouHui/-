<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schoolpet.OldBookAdd">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Spinner
            android:id="@+id/oldBookAdd_spinner"
            android:layout_width="249dp"
            android:layout_height="33dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addOldBook_editText_bookName"
            android:layout_alignBottom="@+id/textView15"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/addOldBook_editText_bookName"
            android:layout_width="211dp"
            android:layout_height="55dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="请输入书名"
            android:inputType="textPersonName"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适用院系"
            android:textSize="24sp"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/addOldBook_editText_bookName"
            android:layout_toStartOf="@+id/oldBookAdd_spinner"
            android:layout_marginEnd="11dp" />

        <Button
            android:id="@+id/addOldBook_button_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addOldBook_button_carcer"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="41dp"
            android:background="@drawable/button_shape"
            android:text="确定"
            android:layout_alignStart="@+id/addOldBook_button_carcer" />

        <Button
            android:id="@+id/addOldBook_button_carcer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginBottom="42dp"
            android:background="@drawable/button_shape"
            android:text="取消" />

        <EditText
            android:id="@+id/addOldBook_editText_ownerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/addOldBook_editText_bookName"
            android:layout_below="@+id/oldBookAdd_spinner"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="请输入您的手机号码"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="添加旧书"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
